<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.railemployeedirectory">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/finallogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".NameSearchActivity"
            android:label="@string/app_name"/>
        <activity android:name=".NameSearchDisplayActivity"
            android:label="@string/app_name"/>
        <activity android:name=".RailwayOfficeActivity"
            android:label="@string/app_name"/>
        <activity android:name=".RailwaySearchDisplayActivity"
            android:label="@string/app_name"/>
        <activity android:name=".InsertActivity"
            android:label="@string/app_name"/>
        <activity android:name=".DeleteActivity"
            android:label="@string/app_name"/>
        <activity android:name=".DetailsActivity"
            android:label="@string/app_name"/>
    </application>

</manifest>